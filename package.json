  "devDependencies": {
    "babel-core": "^6.26",
    "babel-eslint": "^8.2",
    "babel-preset-env": "^1.6",
    "echint": "^4.0",
    "eslint": "^4.16",
    "eslint-config-dev": "2.0",
    "postcss-tape": "2.2",
    "pre-commit": "^1.2",
    "rollup": "^0.55",
    "rollup-plugin-babel": "^3.0"
  },
  "eslintConfig": {
    "extends": "dev",
    "parser": "babel-eslint",
    "rules": {
      "max-params": [
        2,
        5
      ]
    }
