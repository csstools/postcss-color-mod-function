{
  "name": "postcss-color-mod-function",
  "version": "2.3.0",
  "description": "Modify colors using the color-mod() function in CSS",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "repository": "jonathantneal/postcss-color-mod-function",
